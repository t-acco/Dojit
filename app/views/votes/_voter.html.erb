<div class="pull-left vote-arrows">
  <% if policy(Vote.new).create? %>
    <div><%= link_to " ", post_up_vote_path(post), class: vote_link_classes(post, 'up') , method: :post %></div>
  <% end %>
  <div><strong><%= post.points %></strong></div>
  <% if policy(Vote.new).create? %>
    <div><%= link_to " ", post_down_vote_path(post), class: vote_link_classes(post, 'down'), method: :post %></div>
  <% end %>
</div>